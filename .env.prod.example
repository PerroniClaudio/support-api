# Produzione Environment Variables
# Copia questo file in .env.prod e compila con i valori reali

# App Configuration
APP_KEY=base64:your-32-character-secret-key-here
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Database Configuration (Esterno)
# Configura qui i dettagli del tuo database esterno
DB_CONNECTION=mysql
DB_HOST=your-external-database-host.com
DB_PORT=3306
DB_DATABASE=spreetzitt_prod
DB_USERNAME=spreetzitt_user
DB_PASSWORD=your-secure-database-password

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password

# MeiliSearch Configuration
MEILISEARCH_KEY=your-secure-meilisearch-master-key

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-server.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="Spreetzitt"

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Security
SANCTUM_STATEFUL_DOMAINS=yourdomain.com,www.yourdomain.com

# Logging
LOG_LEVEL=warning

# Queue Configuration
QUEUE_CONNECTION=redis
